<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shengchun.elderassistant.main.GuideActivity"
    android:weightSum="1">
  <!--TitleBar-->
    <TextView
        android:id="@+id/tv_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/robot"
        android:gravity="center"
        android:padding="10dp"
        style="@style/title_text"
        android:elevation="5dp"
        android:translationZ="5dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>


    <!--华丽的分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        />
    <LinearLayout
        android:id="@+id/ll_nav"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#1000"
        >
        <!--遥控-->
        <LinearLayout
            android:id="@+id/ll_robot"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.25"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_robot"
                android:src="@drawable/robot_nomal"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:paddingBottom="7dp"
                />
            <TextView
                android:id="@+id/tv_robot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/robot"
                android:textSize="15dp"
                />
        </LinearLayout>
        <!--通讯-->
        <LinearLayout
            android:id="@+id/ll_address"
            android:gravity="center"
            android:layout_weight="0.25"

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_address"
                android:src="@drawable/address_normal"
                android:paddingBottom="7dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                />
            <TextView
                android:id="@+id/tv_address"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textSize="15dp"
                />
        </LinearLayout>
        <!--摄像头-->
