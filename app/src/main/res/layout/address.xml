<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:weightSum="1">

    <!--轮播图片-->
    <include layout="@layout/activity_guide"
        android:layout_height="140dp"
        android:layout_width="match_parent"></include>

    <!--分割-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="实用工具"
            android:textSize="20dp" />
    </LinearLayout>

    <!--工具-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/ll_address_left"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            tools:targetApi="lollipop">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_freq_contacts"
                android:src="@drawable/fre_contacts"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                />
            <TextView
                android:text="@string/freq_contacts"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_freq_contacts"
                android:layout_alignParentStart="true"
                android:textColor="@color/text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_address_right"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            tools:targetApi="lollipop">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_urgent"
                android:src="@drawable/urgent"
                android:layout_margin="10dp"
                />
            <TextView
                android:text="@string/urgent_call"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tc_urgent"
                android:textColor="@color/text"
                android:layout_alignBottom="@+id/tv_freq_contacts"
                android:layout_toEndOf="@+id/tv_freq_contacts"
                android:layout_alignTop="@+id/tv_freq_contacts" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_voice"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            tools:targetApi="lollipop">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_vioce"
                android:src="@drawable/voice"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                />
            <TextView
                android:text="语音互动"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_voice"
                android:textColor="@color/text"
                android:layout_alignParentStart="true"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:background="@color/red_btn_bg_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="居家小贴士"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remind" />
        <TextSwitcher
            android:layout_gravity="center_vertical"
            android:id="@+id/ts_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:text="">
        </TextSwitcher>
    </LinearLayout>


</LinearLayout>