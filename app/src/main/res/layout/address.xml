<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >


    <LinearLayout
        android:id="@+id/ll_address_left"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_margin="50dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_freq_contacts"
            android:src="@drawable/fre_contacts"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            />
        <TextView
            android:text="@string/freq_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_freq_contacts"
            android:layout_alignParentStart="true"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_address_right"
        android:orientation="vertical"
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_urgent"
            android:src="@drawable/urgent"
            android:layout_margin="10dp"
             />
        <TextView
            android:text="@string/urgent_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tc_urgent"
            android:layout_alignBottom="@+id/tv_freq_contacts"
            android:layout_toEndOf="@+id/tv_freq_contacts"
            android:layout_alignTop="@+id/tv_freq_contacts" />

    </LinearLayout>


</LinearLayout>