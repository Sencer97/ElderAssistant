<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/history_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史数据"
            android:paddingLeft="5dp"
            android:gravity="center"
            style="@style/title_text"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/robot_title" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/his_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度"
            android:textSize="18dp"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/his_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湿度"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/his_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM2.5"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/his_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="毒气"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/his_smoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="烟雾"
            android:textSize="18dp"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:gravity="center"
            />
    </LinearLayout>
    <View
        android:id="@+id/underline"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        ></View>

    <android.support.v4.view.ViewPager
        android:layout_margin="25dp"
        android:id="@+id/vp_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></android.support.v4.view.ViewPager>
</LinearLayout>
