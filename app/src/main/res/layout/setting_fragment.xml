<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--用户-->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            />
    <!--华丽分割线-->
    <TextView
        android:layout_width="370dp"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line"
        android:layout_gravity="center"
        />
    <!--登录注册-->
    <RelativeLayout
            android:id="@+id/rl_login"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_login"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/search" />
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册"
                android:textSize="20dp"
                android:textColor="@color/text"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_login" />
        </RelativeLayout>
    <!--华丽分割线-->
    <TextView
        android:layout_width="370dp"
        android:layout_height="0.1dp"
        android:background="@color/line"
        android:layout_gravity="center"
        />
    <!--意见反馈-->
    <RelativeLayout
        android:id="@+id/rl_feedback"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_feedback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/search" />
        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textSize="20dp"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_feedback" />
    </RelativeLayout>
    <!--华丽分割线-->
    <TextView
        android:layout_width="370dp"
        android:layout_height="0.1dp"
        android:background="@color/line"
        android:layout_gravity="center"
        />

    <!--通知-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="系统"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        />
    <!--华丽分割线-->
    <TextView
        android:layout_width="370dp"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line"
        android:layout_gravity="center"
        />
    <!--状态栏通知-->
    <RelativeLayout
        android:id="@+id/rl_notice"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_notice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/search" />
        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知栏显示连接状态"
            android:textSize="20dp"
            android:textColor="@color/text"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_notice" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/switch_connect"
            android:textOff="off"
            android:textOn="on"
            android:layout_alignTop="@+id/tv_notice"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp" />
    </RelativeLayout>
    <!--华丽分割线-->
    <TextView
        android:layout_width="370dp"
        android:layout_height="0.1dp"
        android:background="@color/line"
        android:layout_gravity="center"
        />
    <!--关于软件-->
    <RelativeLayout
        android:id="@+id/rl_about"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/search" />
        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于软件"
            android:textSize="20dp"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_about" />
    </RelativeLayout>
    <!--华丽分割线-->
    <TextView
        android:layout_width="370dp"
        android:layout_height="0.1dp"
        android:background="@color/line"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/exit_btn"
        android:text="退出应用"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:background="@drawable/arc_button_selector"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp">
    </Button>




</LinearLayout>